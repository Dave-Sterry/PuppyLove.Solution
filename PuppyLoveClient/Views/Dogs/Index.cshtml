<div class="container">
    <div class="col-lg-12">
        @if(@Model.Count == 0)
        {
            <h3>Woof luck, looks like theres no new tails in your area.</h3>
        }
        else
        {
            <div class="row-intro">
                <div class="col-md-6">
                    <h3>@Model.Name</h3>
                </div>
                <div class="col-md-6">
                    <h3>@Model.Age</h3>
                </div>
            </div>
            <div class="row-swipe">
                <button type="button" class="squirrel">Squirrel</button>
                <button type="button" class="sniff">Sniff</button>
            </div>
            <div class="row-bio">
                <p class="bio">@Model.Mood</p>
            </div>
        }
    </div>
</div>