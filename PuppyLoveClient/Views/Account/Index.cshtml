@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <h3>Greetings @User.Identity.Name!</h3>
  <p class="newDog" >@Html.ActionLink("Add Dog to Account", "Create", "Dogs")</p>
  <p class="explore">@Html.ActionLink("Browse Dogs!", "Index", "Dogs")</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-dark btn-sm" value="Log out" />
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}